<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # اجازه دسترسی به دایرکتوری assets
    RewriteRule ^assets/ - [L]

    # بستن دسترسی به همه دایرکتوری‌های دیگر
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [F]

    # ریدایرکت کردن همه درخواست‌های دیگر به index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.php [L]
</IfModule>

# دسترسی به فایل های مستقیم مانند تصاویر، CSS و JS در دایرکتوری assets
<FilesMatch "\.(jpg|jpeg|png|gif|css|js)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
